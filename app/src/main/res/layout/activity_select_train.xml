<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bayrec.chuchutimer.SelectTrain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Von:"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/FromTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bis:"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:id="@+id/ToTextView"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@+id/FromTextView"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:ems="10"
        android:layout_alignTop="@+id/ToTextView"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abfahrt"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datum:"
        android:textSize="25dp"
        android:fontFamily="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:id="@+id/DateTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uhrzeit:"
        android:textSize="25dp"
        android:fontFamily="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:id="@+id/TimeTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/DateTextEditor"
        android:layout_alignTop="@+id/DateTextView"
        android:layout_alignParentEnd="true"
        android:onClick="createCalendar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/TimeEditText"
        android:layout_alignTop="@+id/TimeTextView"
        android:layout_alignParentEnd="true"
        android:onClick="createTime" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="Suchen"
        android:textSize="20dp"
        android:id="@+id/button"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
